[user]
  name         = geta6
  email        = getakura@gmail.com

[github]
  user         = geta6

[core]
  editor       = nvim
  pager        = less -FXRS -x2
  excludesfile = ~/.gitignore
  quotepath    = false

[alias]
  a            = add
  diff         = diff --ignore-space-at-eol -b -w --ignore-blank-lines
  co           = checkout
  cam          = commit -am
  # show log graph
  l            = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lg           = log --graph --pretty=oneline --abbrev-commit --decorate
  # show files that have changed between two branches (git dbr master..branch)
  dbr          = diff --name-status
  # show diff of cached files
  dc           = diff --cached
  # show changed files for a commit
  cf           = show --pretty="format:" --name-only
                             # report
  count        = shortlog -sn
  day          = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --after=\"today 0:0AM\" --author=\"`git config --get user.name`\"'"

  # stash shortcuts
  sp           = stash pop
  sw           = stash save
  sl           = stash list
  sh           = show --pretty="format:" --name-only

  # list files
  ls           = ls-tree -r --name-only HEAD

  # history
  undo         = reset --soft HEAD~1
  amend        = commit --amend -C HEAD

  # update
  update       = !git fetch upstream && git rebase upstream/`git rev-parse --abbrev-ref HEAD`

  # cleaner
  cleanup      = "!git remote prune origin && git gc && git branch --merged | grep -v '*' | xargs -I % git branch -d %"
  #"!git fetch --prune origin && git branch --merged origin/master | grep -vE ' master$|^\*' | xargs git branch -d"

  # utility
  unstage      = reset HEAD
  staged       = diff --cached
  unstaged     = diff
  track        = checkout -t
  ci           = commit
  st           = status
  br           = branch -v
  b            = branch

[color]
  diff         = auto
  status       = auto
  branch       = auto
  interactive  = auto
  ui           = auto

[color "branch"]
  current      = green bold
  local        = green
  remote       = red bold

[color "diff"]
  meta         = yellow bold
  frag         = magenta bold

[color "status"]
  added        = green bold
  changed      = yellow bold
  untracked    = red

[color "sh"]
  branch       = yellow

[apply]
  whitespace   = nowarn

[status]
  submodule    = 1

[push]
  default      = current

[pack]
  threads      = 0

[pull]
  default      = current

[push]
  default      = current

[http]
  sslVerify    = false
  postBuffer   = 104857600

[grep]
  lineNumber   = true

[filter "lfs"]
  clean        = git-lfs clean -- %f
  smudge       = git-lfs smudge -- %f
  process      = git-lfs filter-process
  required     = true

[init]
  defaultBranch = main
